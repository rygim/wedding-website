<div class='container'>
  <div class='row'>
    <div class='col-lg-12' style="font-family: 'Pacifico', cursive; font-size: 3em;">RSVP to the wedding!</div>
  </div>
<br />



<%= form_for(@rsvp) do |f| %>
  <% if @rsvp.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rsvp.errors.count, "error") %> prohibited this rsvp from being saved:</h2>

      <ul>
      <% @rsvp.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="field">
    <%= f.label :name,  "Name(s) of attendees" %><br />
    <%= f.text_field :name, :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :can_attend, 'Accepts with pleasure'%><br />
    <%= f.check_box :can_attend %>
  </div>
  <div class="field">
    <%= f.label :can_attend, 'Declines with regret'%><br />
    <%= check_box_tag 'Unable to attend' %>
  </div>
  <div class="field">
    <%= f.label :num_attending, "Number attending" %><br />
    <%= f.number_field :num_attending, min: 0, max: @rsvp.max_attending, value: @rsvp.num_attending, :class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :messages, "Messages (dietary restrictions, song requests, something you want to tell Jill and/or Ryan, etc.)" %><br />
    <%= f.text_area :messages, :class => 'form-control' %>
  </div>
  <div class="actions">
  <br />
    <%= f.submit "Finish RSVP" %>
  </div>
<% end %>

</div>